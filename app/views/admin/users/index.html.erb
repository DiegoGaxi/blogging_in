<div class="container mt-5">
   <% unless @users.nil? %>
      <h1>Usuarios registrados</h1>
      <table class="table">
         <thead>
            <tr>
               <th>Nombre</th>
               <th>Email</th>
               <th>Fecha</th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            <% @users.each do |user| %>
               <tr>
                  <td><%= user.first_name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                  <td><%= link_to 'Ver', admin_user_path(user), data: { turbo: false } %></td>
               </tr>
            <% end %>
         </tbody>
      </table>
   <% end %>
</div>