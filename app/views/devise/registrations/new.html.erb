<div class="container-main">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'registration-form' }) do |f| %>
    <h2>Registro</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name, "Nombre" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: "Tu nombre" %>
    </div>

    <div class="field">
      <%= f.label :email, "Correo Electrónico" %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: "Tu correo electrónico" %>
    </div>

    <div class="field">
      <%= f.label :password, "Contraseña" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Tu contraseña" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar Contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirma tu contraseña" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrar" %>
    </div>
    <%= render "devise/shared/links", class: 'devise-links' %>
  <% end %>

</div>