<div class="text-center pt-3">

  <%- if controller_name != 'sessions' %>
    <%= link_to "Iniciar sesión", new_session_path(resource_name), data: {turbo_frame: :_top} %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrarse", new_registration_path(resource_name), data: {turbo_frame: :_top} %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), data: {turbo_frame: :_top} %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "¿No recibiste las instrucciones de confirmación?", new_confirmation_path(resource_name), data: {turbo_frame: :_top} %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "¿No recibiste las instrucciones para desbloquear la cuenta?", new_unlock_path(resource_name), data: {turbo_frame: :_top} %><br />
  <% end %>
</div>